<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.university.controller.MainViewController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Staff Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="staffNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="ATSR:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="atsrField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="TS:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="tsField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="SA:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="saField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Other:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="otherField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="TLR:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="tlrField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Button text="Add Workload" onAction="#addWorkload" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>

    <TableView fx:id="workloadTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Staff Name"/>
            <TableColumn fx:id="roleColumn" text="Role"/>
            <TableColumn fx:id="atsrColumn" text="ATSR"/>
            <TableColumn fx:id="tsColumn" text="TS"/>
            <TableColumn fx:id="saColumn" text="SA"/>
            <TableColumn fx:id="otherColumn" text="Other"/>
            <TableColumn fx:id="tlrColumn" text="TLR"/>
            <TableColumn fx:id="totalColumn" text="Total"/>
        </columns>
    </TableView>
</VBox>

